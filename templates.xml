					<Anchor point="BOTTOMRIGHT" x="-5" y="0"/>
				</Anchors>
				<ScrollChild>
					<Frame parentKey="Child" >
						<Anchors>
							<Anchor point="TOPLEFT"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<Texture parentKey="HighlightTexture" alphaMode="ADD" hidden="true">
									<Anchors>
										<Anchor point="TOPLEFT"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
		<Scripts>
			<OnLoad method="onLoad"/>
			<OnShow method="onShow"/>
