package-as: MountsJournal

externals:
	libs/LibStub: https://repos.curseforge.com/wow/libstub/trunk
	libs/LibSFDropDown: https://github.com/sfmict/LibSFDropDown

enable-nolib-creation: no

manual-changelog:
	filename: CHANGELOG.md
	markup-type: markdown

ignore:
	- _test.lua
	- README.md
	- CHANGELOG.md
	- _config.yml
	- libs/LibStub/LibStub.toc
	- libs/LibStub/tests
	- libs/LibSFDropDown/LibSFDropDown.toc
	- libs/LibSFDropDown/LibSFDropDown_TBC.toc
	- libs/LibSFDropDown/LibSFDropDown_Vanilla.toc